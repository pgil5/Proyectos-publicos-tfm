        <TabItem Header="{x:Static Properties:Resources.Quantities}"
		         x:Name="QuantityTab">
            <DataGrid ItemsSource="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type local:IfcMetaDataControl}}, Path=Quantities}"
